<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title><%= restaurant.name %> - Food Ordering</title>
  <link rel="stylesheet" href="/css/Project.css">
</head>
<body>
  <header>
    <div class="wrap topbar">
      <a class="brand" href="/">
        <img src="/css/Logo.png" width='80' height='60'>
        <strong>Food Ordering System</strong>
      </a>
      <div style="display:flex;gap:8px">
        <span class="muted"><%= user ? `Logged in as ${user.name}` : 'Not logged in' %></span>
        <% if (user) { %>
          <a class="pill" href="/logout">Logout</a>
        <% } else { %>
          <a class="pill" href="/login?as=user">Login</a>
        <% } %>
      </div>
    </div>
  </header>

  <main class="wrap page active">
    <div style="display:flex;align-items:center;gap:10px;margin-top:6px">
      <a class="back-pill" href="/">← Back</a>
      <h2 id="restTitle"><%= restaurant.name %></h2>
    </div>
    <p class="brand-dark"><%= restaurant.desc %> • <%= restaurant.cuisine %> • ETA <%= restaurant.eta %></p>

    <div class="layout">
      <div>
        <h3>Menu</h3>
        <div class="menu">
          <% dishes.forEach(dish => { %>
            <div class="card">
              <div class="menu-item">
                <div style="font-size:28px"><%= dish.emoji %></div>
                <div class="info">
                  <div style="font-weight:700"><%= dish.name %></div>
                  <div class="muted"><%= dish.desc %></div>
                </div>
                <div class="price">$<%= dish.price.toFixed(2) %></div>
                <form action="/cart/add" method="POST" style="margin:0">
                  <input type="hidden" name="dishId" value="<%= dish._id %>">
                  <input type="hidden" name="restaurantId" value="<%= restaurant._id %>">
                  <button type="submit" class="btn primary">Add</button>
                </form>
              </div>
            </div>
          <% }) %>
        </div>

        <div class="card" style="margin-top:16px">
          <h3>Comments</h3>
          <div class="comments">
            <% comments.forEach(comment => { %>
              <div class="comment-item">
                <div class="avatar"><%= comment.userName.charAt(0) %></div>
                <div class="comment-body">
                  <div class="comment-meta">
                    <strong><%= comment.userName %></strong>
                    <span><%= new Date(comment.createdAt).toLocaleString() %></span>
                  </div>
                  <div><%= comment.text %></div>
                </div>
              </div>
            <% }) %>
          </div>

          <form action="/restaurant/<%= restaurant._id %>/comment" method="POST" class="form">
            <label>
              Comment
              <textarea name="commentText" rows="3" placeholder="Share your thoughts"></textarea>
            </label>
            <button type="submit" class="btn primary">Post comment</button>
          </form>
        </div>
      </div>

      <aside class="cart">
        <h3>Cart</h3>
        <ul>
          <% if (cart.length === 0) { %>
            <li>Cart is empty</li>
          <% } else { %>
            <% cart.forEach(item => { %>
              <li>
                <span><%= item.emoji %> <%= item.name %></span>
                <div class="qty">
                  <form action="/cart/update" method="POST" style="margin:0">
                    <input type="hidden" name="dishId" value="<%= item._id %>">
                    <input type="hidden" name="action" value="dec">
                    <input type="hidden" name="restaurantId" value="<%= restaurant._id %>">
                    <button type="submit">-</button>
                  </form>
                  <span><%= item.quantity %></span>
                  <form action="/cart/update" method="POST" style="margin:0">
                    <input type="hidden" name="dishId" value="<%= item._id %>">
                    <input type="hidden" name="action" value="inc">
                    <input type="hidden" name="restaurantId" value="<%= restaurant._id %>">
                    <button type="submit">+</button>
                  </form>
                  <form action="/cart/update" method="POST" style="margin:0">
                    <input type="hidden" name="dishId" value="<%= item._id %>">
                    <input type="hidden" name="action" value="del">
                    <input type="hidden" name="restaurantId" value="<%= restaurant._id %>">
                    <button type="submit">✕</button>
                  </form>
                </div>
              </li>
            <% }) %>
          <% } %>
        </ul>
        <div class="total">
          <span>Subtotal</span>
          <span>
            $<%= cart.reduce((sum, item) => sum + (item.price * item.quantity), 0).toFixed(2) %>
          </span>
        </div>
        <br>
        
        <button class="checkout" id="checkoutBtn">Checkout</button>
      </aside>
    </div>
  </main>
  <script>
 
  	const checkoutB = document.getElementById("checkoutBtn");
  	checkoutB.addEventListener('click',()=>{
  		
  			window.location.href = '/checkout';
  		
  		
  	})
  </script>
</body>
</html>
